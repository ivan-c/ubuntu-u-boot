+&uart1 {
+	pinctrl-names = "default";
+	pinctrl-0 = <&uart1_pins>;
+	status = "okay";
+};
+
+&sdhci {
+	status = "disabled";
+};
+
+&sdhost {
+	status = "disabled";
+};
+
+&emmc2 {
+	compatible = "brcm,bcm2711-emmc2";
+	status = "okay";
+};
+
+&gpio {
+	uart1_pins: uart1_pins {
+		brcm,pins;
+		brcm,function;
+		brcm,pull;
+	};
+};
